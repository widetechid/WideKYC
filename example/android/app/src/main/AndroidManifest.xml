<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wide.mobile.wkycdemo">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_VIDEO"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:extractNativeLibs="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.KYCDemo">
        <activity
            android:name="com.wide.mobile.wkycdemo.ExampleActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.KYCDemo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.wide.mobile.wkycdemo.MobileSDKActivity"
            android:exported="true"
            android:theme="@style/Theme.KYCDemo.NoActionBar">
        </activity>
        <activity
            android:name="com.wide.mobile.wkycdemo.InitApiActivity"
            android:exported="true"
            android:theme="@style/Theme.KYCDemo.NoActionBar">
        </activity>
        <activity
            android:name="com.wide.mobile.wkycdemo.WebViewActivity"
            android:exported="true"
            android:theme="@style/Theme.KYCDemo.NoActionBar">
        </activity>
    </application>

</manifest>
